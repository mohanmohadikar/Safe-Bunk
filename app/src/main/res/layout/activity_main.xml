<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.mohanmohadikar.safebunk.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/main_gradient">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:text="Safe bunk"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/attendedlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textColorHint="#ffffff"
            android:hint="Lectures attended till now">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="noExcludeDescendants"
                android:textColor="#ffffff"
                android:inputType="number"
                android:id="@+id/attended"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/heldlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textColorHint="#ffffff"
            android:hint="Lectures held till now">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="noExcludeDescendants"
                android:textColor="#ffffff"
                android:inputType="number"
                android:id="@+id/held"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/criterialayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff"
            android:padding="30dp"
            android:hint="% (percentage) criteria for eligibility">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="noExcludeDescendants"
                android:textColor="#ffffff"
                android:inputType="number"
                android:id="@+id/criteria"/>

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:background="@drawable/main_gradient"
        android:id="@+id/calculate"
        android:text="     Calculate     "/>


    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:text="Attendence percentage"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/suggestion"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Number of bunks left"
        android:padding="10dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>

</LinearLayout>